<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CrossBrowser Test Suite" parallel="methods" thread-count="2" data-provider-thread-count="2">
    <test verbose="2" preserve-order="true" name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.lumatest.test.NavigationTest"/>
            <class name="com.lumatest.test.TitleTest"/>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="FirefoxTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.lumatest.test.NavigationTest"/>
            <class name="com.lumatest.test.TitleTest"/>
        </classes>
    </test>
    <test verbose="10" preserve-order="true" name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.lumatest.test.NavigationTest"/>
            <class name="com.lumatest.test.TitleTest"/>
        </classes>
    </test>
    <test verbose="10" preserve-order="true" name="SafariTest">
        <parameter name="browser" value="safari"/>
        <classes>
            <class name="com.lumatest.test.NavigationTest"/>
            <class name="com.lumatest.test.TitleTest"/>
        </classes>
    </test>
</suite>